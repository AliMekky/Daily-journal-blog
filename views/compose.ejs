<%- include("partials/header") -%>

<h1>Compose</h1>
<form  action="/compose" method="post">
  <div class="mb-3">
    <label for="inputTitle" class="form-label">Title</label>
    <input type="text" class="form-control" id="inputTitle" name = "postTitle">
  </div>
  <div class="mb-3">
    <label for="inputText" class="form-label">Post</label>
    <textarea class="form-control" id="inputText" rows="3" name = "postBody"></textarea>
  </div>
  <button class = "btn btn-primary mb-3" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") -%>






